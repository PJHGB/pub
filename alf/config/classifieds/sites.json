{
  "sites": [
    {
      "name": "autotrader_uk",
      "enabled": true,
      "adapter": "rest",
      "base_url": "https://api.autotrader.co.uk",
      "auth": {
        "type": "oauth2_client_credentials",
        "token_url": "https://api.autotrader.co.uk/oauth/token",
        "client_id_env_var": "AUTOTRADER_CLIENT_ID",
        "client_secret_env_var": "AUTOTRADER_CLIENT_SECRET",
        "scope": "read:vehicles"
      },
      "endpoints": {
        "auctions": "/api/vehicles"
      },
      "rate_limit": {
        "requests_per_second": 5.0,
        "burst": 10
      },
      "retry": {
        "max_attempts": 3,
        "backoff_factor": 2.0,
        "retry_on_status": [429, 500, 502, 503, 504]
      },
      "default_params": {
        "pageSize": 100,
        "channel": "Cars"
      },
      "pagination": {
        "type": "offset",
        "page_param": "page",
        "page_size_param": "pageSize",
        "start_page": 1,
        "offset_step": 1
      },
      "field_mapping": {
        "id":            "id",
        "manufacturer":  "make",
        "model":         "model",
        "year":          "year",
        "price":         "advertisedPrice.priceGBP",
        "currency":      null,
        "mileage":       "mileage",
        "mileage_unit":  null,
        "condition":     "vehicleType",
        "fuel_type":     "fuelType",
        "transmission":  "transmissionType",
        "colour":        "colour",
        "location":      "location.town",
        "url":           "url",
        "listed_date":   "createdAt"
      }
    },
    {
      "name": "exchange_and_mart",
      "enabled": true,
      "adapter": "rest",
      "base_url": "https://api.exchangeandmart.co.uk",
      "auth": {
        "type": "api_key",
        "header": "X-API-Key",
        "env_var": "EXCHANGE_MART_API_KEY"
      },
      "endpoints": {
        "auctions": "/api/v1/vehicles/search"
      },
      "rate_limit": {
        "requests_per_second": 2.0,
        "burst": 5
      },
      "retry": {
        "max_attempts": 3,
        "backoff_factor": 2.0,
        "retry_on_status": [429, 500, 502, 503, 504]
      },
      "default_params": {
        "pageSize": 50,
        "category": "cars"
      },
      "pagination": {
        "type": "offset",
        "page_param": "page",
        "page_size_param": "pageSize",
        "start_page": 1,
        "offset_step": 1
      },
      "field_mapping": {
        "id":            "adId",
        "manufacturer":  "make",
        "model":         "model",
        "year":          "registrationYear",
        "price":         "price",
        "currency":      null,
        "mileage":       "odometer",
        "mileage_unit":  "odometerUnit",
        "condition":     null,
        "fuel_type":     "fuelType",
        "transmission":  "gearbox",
        "colour":        "colour",
        "location":      "advertiserLocation",
        "url":           "adUrl",
        "listed_date":   "datePosted"
      }
    },
    {
      "name": "motors_co_uk",
      "enabled": true,
      "adapter": "rest",
      "base_url": "https://api.motors.co.uk",
      "auth": {
        "type": "api_key",
        "header": "X-Motors-API-Key",
        "env_var": "MOTORS_API_KEY"
      },
      "endpoints": {
        "auctions": "/api/v2/vehicles"
      },
      "rate_limit": {
        "requests_per_second": 2.0,
        "burst": 5
      },
      "retry": {
        "max_attempts": 3,
        "backoff_factor": 2.0,
        "retry_on_status": [429, 500, 502, 503, 504]
      },
      "default_params": {
        "perPage": 50,
        "status": "live"
      },
      "pagination": {
        "type": "offset",
        "page_param": "page",
        "page_size_param": "perPage",
        "start_page": 1,
        "offset_step": 1
      },
      "field_mapping": {
        "id":            "reference",
        "manufacturer":  "make",
        "model":         "model",
        "year":          "year",
        "price":         "price",
        "currency":      null,
        "mileage":       "mileage",
        "mileage_unit":  "mileageUnit",
        "condition":     "vehicleCondition",
        "fuel_type":     "fuelType",
        "transmission":  "transmission",
        "colour":        "colour",
        "location":      "town",
        "url":           "url",
        "listed_date":   "listedDate"
      }
    }
  ]
}
